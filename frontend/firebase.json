{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/about-us",
        "destination": "/about-us/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
